<Window x:Class="finalProject.PrintToScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finalProject"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"

        Title="Show Permutation Screen" Height="650" FontSize="22" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Proceed" Height="30" FontSize="18" Width="200"
                HorizontalAlignment="Center"  Click="OnProceedClicked" />

        <TextBox x:Name="ReceivedPermutations" Grid.Row="1" 
                 TextWrapping="Wrap" FontSize="14"
                 VerticalScrollBarVisibility="Auto" 
                 IsReadOnly="True" />

    </Grid>
</Window>
